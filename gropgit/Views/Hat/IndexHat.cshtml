@model IEnumerable<gropgit.Models.Hat>

@{
    ViewData["Title"] = "Index";
}

<h1>תצוגת הכובעים</h1>

<p>
    <a asp-action="Create">הוספת כובע</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HatId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hatmeasure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HatColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hatbrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HatImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HatId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hatmeasure)
            </td>
            <td>
                <div style="background-color:@item.HatColor; width:60px; height:60px; "></div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hatbrand)
            </td>
                <td>
                    <img src=@item.HatImage alt="Alternate text" width="60" />


                </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("עריכה", "Details", new { id = item.HatId }) |
                    @Html.ActionLink("מחיקה", "Delete", new { id = item.HatId })
            </td>
        </tr>
}
    </tbody>
</table>
